{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "sourceMap": false,
    "moduleResolution": "Node",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true
  },
  // TSC doesnt like large files lol, you will need to move banned_links.txt manually
  "include": ["./src/**/*", "./src/network/functions/banned_phrases.lock/content.json"]
}